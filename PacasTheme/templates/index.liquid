  <script>
  $('.alpaca-fleece-highlights').click(function() {
    if (!$(event.target).is('i')) {
    $(this).children().toggle()
    }
  })
  // bottom flip up - pl 
  $(window).scroll(function() {
    inView("#greener-than-wrapper", "#greener-than")
    inView("#softer-than-wrapper", "#softer-than")
    inView("#warmer-than-wrapper", "#warmer-than")

  })

  function inView(elementWrapper, element) {
      var top_of_element = $(elementWrapper).offset().top;
      var bottom_of_element = $(elementWrapper).offset().top + $(elementWrapper).outerHeight();
      var bottom_of_screen = $(window).scrollTop() + $(window).innerHeight();
      var top_of_screen = $(window).scrollTop();
      var flipTime =  $(element).offset().top - 250;
      

      if ((bottom_of_screen > top_of_element) && (top_of_screen < bottom_of_element)){
        if ($(window).scrollTop() > flipTime) {
          $(element).hide()
          $(element).siblings().fadeIn(1000)
        }
        else{ 
          let titleSlide = $(element).children('h2')
          if ($(titleSlide).css("margin-top") >= "150px") {
            $(titleSlide).css("margin-top",  "14vw")
          }
        } 
      } 
      // else {
      //     $(elementWrapper).children().hide()
      //     $(elementWrapper).children(element).show()
      // }
    }
  </script>

