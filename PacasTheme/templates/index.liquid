  if ($(window).scrollTop() > greenerFlip) {
    $('#greener-than').hide()
    $('#greener-than').siblings().fadeIn()
  }
  else{
    let top_of_element = $("#greener-than").offset().top;
    let bottom_of_element = $("#greener-than").offset().top + $("#element").outerHeight();
    
