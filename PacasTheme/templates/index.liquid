<script>

  $(window).scroll(function() {
var greenerFlip = $('#greener-than').offset().top - 300;
var softerFlip = $('#softer-than').offset().top - 300;
var warmerFlip = $('#warmer-than').offset().top - 300;
if ($(window).scrollTop() > greenerFlip) {
  $('#greener-than').children('h2').hide()
  $('#greener-than').children('p').fadeIn()
}
if ($(window).scrollTop() > softerFlip) {
  $('#softer-than').children('h2').hide()
  $('#softer-than').children('p').fadeIn()
}
if ($(window).scrollTop() > warmerFlip) {
  $('#warmer-than').children('h2').hide()
  $('#warmer-than').children('p').fadeIn()
}
   
  })

</script>
